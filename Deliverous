fifa-front:
  description: Fifa Front
  container: m96ru/wl-football-league-webapp
  image: m96ru/wl-football-league-webapp
  hostname: fifafront
  links:
  - name: fifa-api
    alias: fifaapi
  ports:
  - ip: fifa.deliverous.com
    container_port: 4200
    host_port: 80

fifa-api:
  description: Fifa Midle
  container: m96ru/wl-football-league-api
  image: m96ru/wl-football-league-api
  environment:
    DB_DRIVER: com.mysql.jdbc.Driver
    DB_URL: "jdbc:mysql://fifadb:3306/wlceligue?autoReconnect=true"
    DB_URL_BAK: "jdbc:mysql://fifadb:3306/wlceligue?autoReconnect=true&useSSL=false"
    DB_USER: root
    DB_PW: root
    MAIL_HOST: 172.0.0.1
    SITE_URL: http://5.135.124.161
  hostname: fifaapi
  links:
  - name: fifa-db
    alias: fifadb
  ports:
  - container_port: 8080
    host_port: 8080

fifa-db:
  description: Fifa BDD
  container: mysql:5.7
  image: mysql:5.7
  hostname: fifadb
  environment:
    MYSQL_ROOT_PASSWORD: root
  ports:
  - container_port: 3306
    host_port: 3306
